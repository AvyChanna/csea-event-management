<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EventViewActivity">

    <ScrollView
        android:id="@+id/EventViewForm"
        android:layout_width="wrap_content"
        android:layout_height="576dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/eventName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:text="Create a Marquee (Scrolling Text) in Android Using TextView. Android Marquee (Scrolling Text) Tutorial with Example"
                android:textSize="24sp"
                android:textStyle="bold"
               />

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="2dp"
                android:gravity="center"
                android:text="Event Details"
                android:textSize="18sp" />

            <android.support.v7.widget.CardView
                android:id="@+id/Event_Details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:elevation="4dp"
                android:padding="15dp"
                app:cardCornerRadius="15dp">


                <TableLayout
                    android:id="@+id/Details_Table"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:shrinkColumns="*"
                    android:stretchColumns="*">


                    <TableRow
                        android:id="@+id/Details_Schedule"
                        android:layout_width="match_parent"
                        android:paddingTop="15dp"
                        android:paddingBottom="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="0"
                            android:paddingStart="50dp"
                            android:text="Event Schedule:" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/EventDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="start"
                                android:text="Event Date" />

                            <TextView
                                android:id="@+id/EventTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="start"
                                android:text="EventTime"/>
                        </LinearLayout>

                    </TableRow>


                    <TableRow
                        android:id="@+id/Details_Venue"
                        android:layout_width="match_parent"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="0"
                            android:paddingStart="50dp"
                            android:text="Event Venue:"
                            android:textStyle="italic" />

                        <TextView
                            android:id="@+id/eventVenue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="1"
                            android:gravity="start"
                            android:text="eventVenue" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/Details_FEE"
                        android:layout_width="match_parent"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="0"
                            android:paddingStart="50dp"
                            android:text="Event Fees:"
                            android:textStyle="italic" />

                        <TextView
                            android:id="@+id/eventFee"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="1"
                            android:gravity="start"
                            android:text="eventFee" />
                    </TableRow>


                    <TableRow
                        android:id="@+id/Details_Availability"
                        android:layout_width="match_parent"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="0"
                            android:paddingStart="50dp"
                            android:text="Seats Available:"
                            android:textStyle="italic" />

                        <TextView
                            android:id="@+id/eventCapacity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="1"
                            android:gravity="start"
                            android:text="eventCapacity" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/Details_TargetAudience"
                        android:layout_width="match_parent"
                        android:paddingTop="5dp"
                        android:paddingBottom="15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="0"
                            android:paddingStart="50dp"
                            android:text="This event is for:"
                            android:textStyle="italic" />

                        <TextView
                            android:id="@+id/eventAudience"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="1"
                            android:gravity="start"
                            android:text="eventTargetAudience"/>
                    </TableRow>

                </TableLayout>

            </android.support.v7.widget.CardView>

            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="2dp"
                android:gravity="center"
                android:text="Frequently Asked Questions"
                android:textSize="18sp" />

            <android.support.v7.widget.CardView
                android:id="@+id/FAQ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="5dp"
                app:layout_constraintTop_toBottomOf="@+id/eventName"
                tools:layout_editor_absoluteX="5dp">

                <ExpandableListView
                    android:id="@+id/FAQ_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                </ExpandableListView>

            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>